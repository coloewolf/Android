<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_appicon"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <TextView
        android:singleLine="true"
        android:id="@+id/tv_appname"
        android:textSize="18sp"
        android:text="我是应用名称"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_appicon"
        android:layout_toRightOf="@+id/iv_appicon"
        android:layout_toEndOf="@+id/iv_appicon" />

    <TextView
        android:textSize="16sp"
        android:text="我是安装目录"
        android:textColor="#80000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_appicon"
        android:layout_toRightOf="@+id/iv_appicon"
        android:layout_toEndOf="@+id/iv_appicon"
        android:id="@+id/tv_location" />

    <TextView
        android:text="应用的大小"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_appsize"
        android:layout_alignBottom="@+id/tv_location"
        android:layout_toRightOf="@+id/tv_appname"
        android:layout_toEndOf="@+id/tv_appname" />


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_appicon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>