<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/luncher_bg"
    android:id="@+id/rl_splash_root"
    tools:context=".activities.SplashActivity">


    <TextView
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本号"
        android:id="@+id/tv_splash_version"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:indeterminateDrawable="@drawable/progressbar_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="103dp"
        android:layout_above="@+id/tv_splash_download"
        android:layout_alignLeft="@+id/tv_splash_version"
        android:layout_alignStart="@+id/tv_splash_version" />

    <TextView
        android:id="@+id/tv_splash_download"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
